<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/UserBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="202dp"
        android:ems="11"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="@dimen/activity_vertical_margin"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        android:maxLines="1">

    </EditText>

    <Button
        android:id="@+id/CancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LoginButton"
        android:layout_alignBottom="@+id/LoginButton"
        android:layout_toRightOf="@+id/LoginButton"
        android:minEms="4"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PassBox"
        android:layout_below="@+id/PassBox"
        android:layout_marginLeft="32dp"
        android:minEms="4"
        android:text="@string/Login" />

    <EditText
        android:id="@+id/PassBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UserBox"
        android:layout_alignTop="@+id/UserBox"
        android:layout_marginTop="45dp"
        android:ems="11"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:maxLines="1" />

</RelativeLayout>